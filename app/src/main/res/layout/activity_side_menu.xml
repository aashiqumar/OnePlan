<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:scrollbars="none"
    tools:context=".side_menu">

    <Button
        android:id="@+id/p_btnBackTo_sidemenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/ic_tb_arrow"
        android:fontFamily="sans-serif-black"
        android:rotation="180" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-100dp" />


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/sidemenu_profileShow"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/profile" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="230dp">

        <Button
            android:id="@+id/sidemenu_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_btm"
            android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Profile"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/sidemenu_aboutus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corners_btm"
                android:drawableStart="@drawable/ic_aboutus"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="About Us"
                android:textAllCaps="false"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/sidemenu_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corners_btm"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textSize="20dp" />


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>