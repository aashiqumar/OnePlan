<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".Login_Signup.activity_view_profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Profile"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="5dp"/>

    <Button
        android:id="@+id/view_profile_btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_tb_arrow"
        android:fontFamily="sans-serif-black"
        android:rotation="180" />


    <androidx.cardview.widget.CardView
        android:id="@+id/profile_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="0dp"
        android:outlineAmbientShadowColor="@android:color/transparent"
        app:cardCornerRadius="75dp"
        app:cardPreventCornerOverlap="false">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/view_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/profile" />



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/view_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_verified_user"
        android:drawablePadding="7dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Name"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/view_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:drawablePadding="7dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="example@domain.com"
        android:textColor="#817F7F"
        android:textSize="15dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">


            <Button
                android:id="@+id/btn_EditProfile"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttoncurve"
                android:text="Edit Profile"
                android:textColor="#fff" />

