<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:theme="@style/Theme.AppCompat"
    android:background="@android:color/transparent"
    android:layout_height="match_parent"
    tools:context=".TimeTable.timetable_bottomSheet">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="30dp"
            android:background="@drawable/tb_add_bg"
            android:orientation="vertical">



                <TextView
                    android:id="@+id/tb_done"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:layout_marginLeft="180dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="right"
                    android:text="Done"
                    android:textColor="#1F83DA"
                    android:textSize="23dp" />






                <TextView
                    android:id="@+id/tb_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="-30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Cancel"
                    android:textColor="#1F83DA"
                    android:textSize="23dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="Set Your Reminder!"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_title" />

                    <EditText
                        android:id="@+id/set_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#000"
                        android:background="@drawable/gradient_homepage"
                        android:hint="Enter Your Title"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/colorAccent" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/set_description"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:gravity="top"
                            android:paddingTop="10dp"
                            android:layout_marginRight="18dp"
                            android:textColor="#000"
                            android:background="@drawable/gradient_homepage"
                            android:hint="Enter Any Description (Optional)"
                            android:paddingLeft="10dp"
                            android:lines="4"
                            android:textColorHint="@color/colorPrimary" />

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

    </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_homepage">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="10dp">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/ic_tb_calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="52dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Date"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tb_txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:layout_marginTop="23dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Select Date"
                            android:textColor="#797777"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="162dp"
                            android:layout_marginLeft="300dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="10dp">


                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/tb_date_switch"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:textOn="On"
                                android:checked="false"
                                android:textOff="Off"
                                android:layout_marginLeft="10dp"
                                android:layout_marginEnd="10dp"
                                android:thumb="@drawable/thumb1"
                                app:track="@drawable/track" />

                        </LinearLayout>


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="63dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="320dp"
                            android:layout_height="1dp"
                            app:cardBackgroundColor="#BDBCBC" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Time"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tb_txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:layout_marginTop="23dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Select Time"
                            android:textColor="#797777"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="200dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/tb_clock" />



                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/tb_time_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:thumb="@drawable/thumb1"
                                app:track="@drawable/track" />

                        </LinearLayout>


                    </RelativeLayout>






                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Set Priority"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Assingments"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="200dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/assignment" />



                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/assignemnt_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:thumb="@drawable/thumb1"
                            app:track="@drawable/track" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="130dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="1dp"
                        app:cardBackgroundColor="#BDBCBC" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Events"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="200dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/event" />



                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/events_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:thumb="@drawable/thumb1"
                            app:track="@drawable/track" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="65dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="1dp"
                        app:cardBackgroundColor="#BDBCBC" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Classes"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="200dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/classes"/>



                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/classes_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:thumb="@drawable/thumb1"
                            app:track="@drawable/track" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="190dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="1dp"
                        app:cardBackgroundColor="#BDBCBC" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Other"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="200dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/other" />



                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/other_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:thumb="@drawable/thumb1"
                            app:track="@drawable/track" />

                    </LinearLayout>

                </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

</ScrollView>